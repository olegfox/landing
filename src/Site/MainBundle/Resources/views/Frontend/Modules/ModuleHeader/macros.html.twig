{% macro moduleHeader(module, local = '') %}
    <style type="text/css">
        {% if module.backgroundImg|length > 0 %}
            .wrap-header.level{{ module.level.id }} {
                {% if module.backgroundImg|length > 0 %}
                    background-image: url('{{ local }}{{ asset(module.webPath) }}');
                {% endif %}
                {% if module.backgroundPosition|length > 0 %}
                    background-position: {{ module.backgroundPosition }};
                {% endif %}
                {% if module.backgroundAttachment|length > 0 %}
                    background-attachment: {{ module.backgroundAttachment }};
                {% endif %}
                {% if module.backgroundSize|length > 0 %}
                    background-size: {{ module.backgroundSize }};
                {% endif %}
            }
        {% endif %}
        {% if module.shadow > 0 %}
        .wrap-header.level{{ module.level.id }} .shadow {
            opacity: {{ (module.shadow) / 100 }};
        }
        {% endif %}
        {% if module.shadowText > 0 %}
        .wrap-header.level{{ module.level.id }} * {
            text-shadow: {{ module.shadowText }};
        }
        {% endif %}
    </style>
    <div class="wrap-header level-block level{{ module.level.id }}" {% if module.video|length > 0 %}data-video="{{ local }}{{ asset(module.webPathVideo) }}"{% endif %}>
        <div class="shadow"></div>
        <div class="header">
            <!-- Top -->
            <div class="top">
                <div class="hint-left">
                    <div class="table">
                        <div class="table-cell">
                            <div class="text">
                                {{ module.hintLeft|raw }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hint-right{% if module.hintRight1|length == 0 and module.hintRight2|length == 0 %} hint-right-none{% endif %}">
                    {{ module.hintRight1|raw }}
                    {{ module.hintRight2|raw }}
                </div>
            </div>
            <!-- end Top -->

            <!-- Center Block -->
            <div class="wrap-center-block">
                <div class="center-block">
                    {% if module.logo|length > 0 %}
                        <img src="{{ local }}{{ asset(module.webPathLogo) }}" alt=""/>
                    {% endif %}
                    <h1>{{ module.head1|raw }}</h1>
                    <h2>{{ module.head2|raw }}</h2>
                    {% if module.isButton %}
                        <button class="btn feedback">{{ module.textButton }}</button>
                    {% endif %}
                </div>
            </div>
            <!-- end Center Block -->

            {% if module.isArrow %}
                <!-- Arrow Down -->
                <a href="#" class="arrow {% if module.isArrowFlashing %}arrow-blink{% endif %}" data-current-level="level{{ module.level.id }}"></a>
                <!-- end Arrow Down -->
            {% endif %}
        </div>
    </div>
{% endmacro %}